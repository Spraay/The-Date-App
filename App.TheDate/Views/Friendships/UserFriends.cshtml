@model IEnumerable<User>

@{
    ViewData["Title"] = "User Friends";
    var usersMarkedAsMet = (IEnumerable<Guid>)ViewBag.MarkedAsMet;
    var usersMet = (IEnumerable<Guid>)ViewBag.UsersMet;
}

@if (Model.Any())
{
    <div class="grey darken-3 z-depth-3" style="padding: 1vw; margin-top: -10px;">
        <div class="center">
            <p class="white-text" style="font-size: 3vw;">Friends<i style="vertical-align: bottom; font-size: 4vw !important;" class="inline-icon material-icons">group</i></p>
        </div>
    </div>
}
else
{
    <div class="valign-wrapper my-wrapper row">
        <div class="col s12">
            <div class="col s12 center"><i class="material-icons orange-text" style="font-size: 150px;">sentiment_dissatisfied</i></div>
            <h1 class="orange-text center"> Your friend list seems to be empty. Try add some friends <a asp-controller="Explore" asp-action="Index">here</a></h1>
        </div>
    </div>
}

<div class="container">
    <div class="row">
        
        @foreach (var item in Model)
        {
            <div class="col m4 s4 l4">
                <div class="card">
                    <div class="card-image col m12 s12 l12">
                        <div class="thumbnail no-border no-padding" >
                            <img src="~/images/userimages/@item.ProfileImageSrc" class="responsive-img" />
                        </div>
                        <span class="card-title" style="background: rgba(0, 0, 0, 0.5); width: 100%">@Html.DisplayFor(m => item.FirstName) @Html.DisplayFor(m => item.LastName)</span>
                    </div>
                    <div class="card-action grey col m12 s12 l12">
                        <div class="center">
                            <a class="btn btn-large rounded red tooltipped" data-position="top" data-tooltip="Delete Friend" asp-controller="Friendships" asp-action="Delete" asp-route-id="@item.Id" asp-route-returnURL="@Url.RouteUrl(ViewContext.RouteData.Values)">
                                <i class="material-icons">delete</i>
                            </a>
                            <a class="btn btn-large rounded blue tooltipped" data-position="top" data-tooltip="Show Profile" asp-controller="User" asp-action="Profile" asp-route-id="@item.Id" asp-route-returnURL="@Url.RouteUrl(ViewContext.RouteData.Values)">
                                <i class="material-icons">info</i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<style>
    .thumbnail img {
        height: 250px;
        width: 100%;
    }
</style>