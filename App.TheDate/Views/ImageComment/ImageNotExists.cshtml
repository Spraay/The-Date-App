@{
    ViewData["Title"] = "Image not exists";
}

<div class="row">
    <div class="col s12">
        <div class="col s12 center"><i class="material-icons orange-text" style="font-size: 150px;">sentiment_dissatisfied</i></div>
        <h1 class="orange-text center"> Image Not Exists</h1>
    </div>
    <div class="container">
        <div class="row">
            <div class="col s4 offset-l4">
                <div class="card">
                    <div class="card-content">
                        <p>Image with id '@ViewBag["ImageID"]' not exists in database.</p>    
                    </div>
                    <div class="card-action grey">
                        <div class="center">
                            <a href="@ViewBag.ReturnURL" class="btn btn-floating btn-large waves-effect blue pulse">
                                <i class="material-icons">replay</i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


