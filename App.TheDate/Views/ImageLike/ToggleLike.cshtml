@model Image
<div class="row">
    <div class="col s12">
        <h1 class="green-text center">
            @(ViewBag.isLiked ? "You liked image below" : "You unliked image below")
        </h1>
    </div>
    <div class="container">
        <div class="row">
            <div class="col s4 offset-l4">
                <div class="card">
                    <div class="card-image">
                        <img src="~/images/userimages/@Model.Src">
                        <span class="card-title" style="width:100%; background: rgba(0, 0, 0, 0.5);">@Model.Title</span>
                    </div>
                    <div class="card-action grey">
                        <div class="center">
                            <a href="@ViewBag.returnURL" class="btn rounded btn-large waves-effect blue pulse">
                                <i class="material-icons">replay</i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>