@model App.Model.Entities.Message

@{
    ViewData["Title"] = "Add Message";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" asp-controller="Messages" asp-route-returnURL="@ViewBag.ReturnURL">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="SenderId" />
            <input type="hidden" asp-for="ConversationId" />
            <div class="form-group">
                <label asp-for="Content" class="control-label"></label>
                <input asp-for="Content" class="form-control" />
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

