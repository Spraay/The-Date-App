@inject SignInManager<User> SignInManager

<nav>
    <div class="nav-wrapper">
        <a asp-controller="Home" asp-action="Index" class="brand-logo center" style="font-size: 25px">
            <i class="material-icons left" style="font-size: 25px; margin-top:1px;">
                favorite_border
            </i>
            The Date
            <i class="material-icons right" style="font-size: 25px; margin-top:1px;">
                favorite
            </i>
        </a>
        <a href="#" data-target="mobile-demo" class="sidenav-trigger"><i class="material-icons">menu</i></a>
        <ul class="right hide-on-med-and-down">
            @if (SignInManager.IsSignedIn(User))
            {
                @await Html.PartialAsync("Navbar/Dropdown/_Profile")
                @await Html.PartialAsync("Navbar/Dropdown/_Friendship")
                @await Html.PartialAsync("Navbar/Dropdown/_Messages")
                @await Html.PartialAsync("Navbar/Dropdown/_Settings")
                @await Html.PartialAsync("Navbar/_LogOut")
            }
            else
            {
                <li><a asp-area="Identity" asp-page="/Account/Register">Register</a></li>
                <li><a asp-area="Identity" asp-page="/Account/Login">Login</a></li>
            }
        </ul>
    </div>
</nav>

