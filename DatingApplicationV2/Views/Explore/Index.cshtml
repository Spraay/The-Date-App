@model IEnumerable<Enties.ApplicationUser>

@{
    ViewData["Title"] = "Index";
}
<div class="container">
    <div class="row">
        <h1>Users List</h1>
    </div>
    <ul class="collection">
        @foreach (var item in Model) {
        
        <li class="collection-item avatar">
            <img src="~/images/NoProfileImage.png" alt="" class="circle">
            <p>
                @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
            </p>
            <a class="secondary-content" asp-controller="Friendships" asp-action="Invite" asp-route-friendID="@item.Id">Invite</a> 
        </li>
        }

    </ul>
</div>
            
            
                
           
       
}

