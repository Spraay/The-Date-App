@model Entity.User

@{
    ViewData["Title"] = "Friend";
}

<div class="row">
    <div class="col s12">
        <div class="col s12 center"><i class="material-icons green-text" style="font-size: 150px;">sentiment_satisfied</i></div>
        <h1 class="green-text center"> User below already invited you. You wish to accept friend request?</h1>
    </div>
    <div class="container">
        <div class="row">
            <div class="col s4 offset-l4">
                <div class="card">
                    <div class="card-image">
                        <img src="~/images/userimages/@Model.ProfileImageSrc">
                        <span class="card-title" style="width:100%; background: rgba(0, 0, 0, 0.5);">@Html.DisplayFor(m => Model.FirstName) @Html.DisplayFor(m => Model.LastName)</span>
                    </div>
                    <div class="card-action grey">
                        <div class="center">
                            <a asp-controller="Explore" asp-action="Index" class="btn btn-floating btn-large waves-effect blue pulse">
                                <i class="material-icons">replay</i>
                            </a>
                            <a asp-controller="Friendship" asp-action="Invite" asp-route-Id="@Model.Id" class="btn btn-floating btn-large waves-effect blue pulse">
                                <i class="material-icons">check</i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>

</div>

