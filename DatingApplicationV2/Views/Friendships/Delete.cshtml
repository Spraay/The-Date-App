@model Entity.User

@{
    ViewData["Title"] = "Delete";
}
<div class="grey darken-3 z-depth-3" style="padding: 1vw; margin-top: -10px;">
    <div class="center">
        <i style="vertical-align: bottom; font-size: 6vw !important;" class="inline-icon material-icons red-text">delete</i></p>
        <h5 class="orange-text">Are you sure you want to delete friendship with the person below?</h5>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col s4 offset-l4">
            <div class="card">
                <div class="card-image">
                    <img src="~/images/userimages/@Html.DisplayFor(m=>Model.ProfileImageSrc)">
                    <span class="card-title" style="width:100%; background: rgba(0, 0, 0, 0.5);">
                        @Html.DisplayFor(m => Model.FirstName)  @Html.DisplayFor(m => Model.LastName)
                    </span>
                </div>
                <div class="card-action grey">
                    <div class="center">
                        <form id="Form" asp-action="Delete" asp-route-returnURL="@ViewBag.ReturnURL">
                            <a href="@ViewBag.ReturnURL" class="btn btn-floating btn-large waves-effect blue pulse">
                                <i class="material-icons">replay</i>
                            </a>
                            <a id="FormSubmitButton" value="Delete" class="btn btn-floating btn-large waves-effect red pulse">
                                <i class="material-icons">delete_forever</i>
                            </a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>