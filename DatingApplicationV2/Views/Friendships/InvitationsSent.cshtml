@model IEnumerable<Friendship>

@{
    ViewData["Title"] = "Invitations";
}


@if (Model.Any())
{
    <div class="grey darken-3 z-depth-3" style="padding: 1vw; margin-top: -10px;">
        <div class="center">
            <p class="white-text" style="font-size: 3vw;">Invites sent<i style="vertical-align: bottom; font-size: 4vw !important;" class="inline-icon material-icons">redo</i></p>
        </div>
    </div>
}
else
{
    <div class="valign-wrapper my-wrapper row">
        <div class="col s12">
            <div class="col s12 center"><i class="material-icons orange-text" style="font-size: 150px;">sentiment_dissatisfied</i></div>
            <h1 class="orange-text center"> No invitations sent</h1>
        </div>
    </div>
}
<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col m4 center">
                <div class="card ">
                    <div class="card-image">
                        <img src="~/images/userimages/@item.Friend.ProfileImageSrc" style="width: 400px; height: 350px;">
                        <span class="card-title" style="width:100%; background: rgba(0, 0, 0, 0.5);">@Html.DisplayFor(m => item.Friend.FirstName) @Html.DisplayFor(m => item.Friend.LastName)</span>
                    </div>
                    <div class="card-action grey">
                        <div class="center">
                            <a class="btn-floating red" asp-action="Delete" asp-route-id="@item.FriendId">
                                <i class="material-icons">delete</i>
                            </a>
                            <a class="btn-floating blue" asp-controller="User" asp-action="Details" asp-route-id="@item.FriendId">
                                <i class="material-icons">info</i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
