@model Entity.Image
@{
    ViewData["Title"] = "Create";
}
<div class="parallax-container" style="height: 300px">
    <div class="section no-pad-bot">
        <div class="container">
            <h1 class="header white-text text-darken-1">Image Upload</h1>
            <div class="row col blue darken-1">
                <h5 class=" center col s12 white-text">Here you can add your image, and share it!</h5>
            </div>
        </div>
    </div>
    <div class="parallax"><img src="~/images/photographer.jpg" alt="Unsplashed background img 1" style="opacity: 1; transform: translate3d(-50%, 168.122px, 0px);"></div>
</div>
<div class="container-fluid" style="margin-top: -22px; margin-bottom: -22px;">
    <br /><br />
    <div class="container white z-depth-3">
        <br />
        <br />
        <div class="col s12">
            <h5 class="blue-grey-text lighten-3 center pulsate"><i class="material-icons medium center">info</i></h5>
            <h5 class="blue-grey-text lighten-3 center">@ViewData["AllowedExtensionsMsg"]</h5>
        </div>
        <br>
        <form method="post" enctype="multipart/form-data" asp-controller="Image" asp-action="Create" id="Form">
            <div class="row">
                <div class="col s12">
                    <div class="file-field input-field">
                        <div class="btn">
                            <i class="material-icons left">image</i>
                            <span>Image</span>
                            <input type="file" name="file">
                        </div>
                        <div class="file-path-wrapper">
                            <input class="file-path validate" type="text">
                        </div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="input-field col s12 m4 l4">
                    <textarea asp-for="Title" class="materialize-textarea"></textarea>
                    <label asp-for="Title">Title</label>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="input-field col s12 m8 l8">
                    <input asp-for="Description" type="text" />
                    <label asp-for="Description">Description</label>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="col s12">
                    <p class="center-align">
                        <a id="FormSubmitButton" value="Save" style="position: relative; bottom: -45px;" class="btn btn-floating btn-large waves-effect blue pulse">
                            <i class="material-icons">done</i>
                        </a>
                    </p>
                </div>
            </div>
        </form>
    </div>
    <br />
    <br />
</div>
<br />
<br />



