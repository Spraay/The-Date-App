@model Entity.Image

@{
    ViewData["Title"] = "Friend";
}

<div class="row">
    <div class="col s12">
        <div class="col s12 center"><i class="material-icons green-text" style="font-size: 150px;">sentiment_satisfied</i></div>
        <h1 class="green-text center"> Your profile photo is updated! </h1>
    </div>
    <div class="container">
        <div class="row">
            <div class="col s4 offset-l4">
                <div class="card">
                    <div class="card-image inline">
                        <img src="~/images/userimages/@Model.Src">
                    </div>
                    <div class="card-action grey">
                        <div class="center">
                            <a href="@ViewBag.ReturnURL" class="btn btn-floating btn-large waves-effect blue pulse">
                                <i class="material-icons">replay</i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


