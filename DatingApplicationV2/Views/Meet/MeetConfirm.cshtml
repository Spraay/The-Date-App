@model User

@{
    ViewData["Title"] = "Friend marked as met";
}

<div class="row">
    <div class="col s12">
        <div class="col s12 center"><i class="material-icons green-text" style="font-size: 150px;">sentiment_satisfied</i></div>
        <h1 class="green-text center"> User below marked as met</h1>
    </div>
    <div class="container">
        <div class="row">
            <div class="col s4 offset-l4">
                <div class="card">
                    <div class="card-image">
                        <img src="~/images/userimages/@Html.DisplayFor(m => Model.ProfileImageSrc)">
                        <span class="card-title" style="width:100%; background: rgba(0, 0, 0, 0.5);">@Html.DisplayFor(m => Model.FirstName) @Html.DisplayFor(m => Model.LastName)</span>
                    </div>
                    <div class="card-action grey">
                        <div class="center">
                            <a href="@ViewBag.ReturnURL" class="btn rounded btn-large waves-effect blue pulse">
                                <i class="material-icons">replay</i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

