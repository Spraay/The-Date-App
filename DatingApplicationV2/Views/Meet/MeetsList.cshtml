@model IEnumerable<User>

@{
    ViewData["Title"] = "Real Life Met";
}

@if (Model.Any())
{
    <div class="grey darken-3 z-depth-3" style="padding: 1vw; margin-top: -10px;">
        <div class="center">
            <p class="white-text" style="font-size: 3vw;">
                The users you've really met <i style="vertical-align: bottom; font-size: 4vw !important;" class="inline-icon material-icons">group</i>
            </p>
        </div>
    </div>
}
else
{
    <div class="valign-wrapper my-wrapper row">
        <div class="col s12">
            <div class="col s12 center"><i class="material-icons orange-text" style="font-size: 150px;">sentiment_dissatisfied</i></div>
            <h1 class="orange-text center"> You did not meet anyone jet. 
                <a href="@ViewBag.returnURL" class="btn rounded btn-large waves-effect blue pulse">
                    <i class="material-icons">replay</i>
                </a>
            </h1>
        </div>
    </div>
}

<div class="container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col m4">
                <div class="card">
                    <div class="card-image inline">
                        <img src="~/images/userimages/@Html.DisplayFor(m => item.ProfileImageSrc)" >
                        <span class="card-title" style="width:100%; background: rgba(0, 0, 0, 0.5);">
                            @Html.DisplayFor(m => item.FirstName)  @Html.DisplayFor(m => item.LastName)
                        </span>
                    </div>
                    <div class="card-action grey">
                        <div class="center">
                            <a class="btn btn-large rounded blue tooltipped" data-position="top" data-tooltip="Profile Details"  asp-controller="User" asp-action="Profile" asp-route-id="@item.Id">
                                <i class="material-icons">info</i>
                            </a>
                            <a class="btn btn-large rounded red lighten-1 tooltipped" data-position="top" data-tooltip="Rate Authenticity" asp-controller="Vote" asp-action="Vote" asp-route-id="@item.Id">
                                <i class="material-icons tiny yellow-text">star</i>
                                <i class="material-icons tiny yellow-text">star_half</i>
                                <i class="material-icons tiny yellow-text">star_border</i>
                            </a>
                            <p class="white red-text">TODO is he marked me as met too</p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>