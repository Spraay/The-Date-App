@inject SignInManager<ApplicationUser> SignInManager
@inject IUserService _userService
<!-- Dropdown Structure -->
<ul id='profileDropdown' class='dropdown-content'>
    <li>Manage</li>
    <li>My Profile</li>
</ul>

<li class="avatar">
    <a class="left tooltipped" data-position="bottom" data-tooltip="Profile" asp-controller="User" asp-action="Index">
        <img src="~/images/userimages/@_userService.Get(_userService.CurrentUserId).ProfileImageSrc" alt="" class="circle left" style="height: 44px; width: 44px; margin-top: 10px; margin-right: 5px;">
        @if (SignInManager.IsSignedIn(User))
        {
            @_userService.Get(_userService.CurrentUserId).FirstName;
        }
    </a>
</li>
