@using Microsoft.AspNetCore.Identity
@using Enties;
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject IUserService _userService
@inject IFriendService  _friendService

@if (SignInManager.IsSignedIn(User))
{

    <!-- Dropdown Structure -->
    <ul id='userSettingsDropdown' class='dropdown-content' data-constrainWidth="false">
        <li class="divider" tabindex="-1"></li>
        <li>
            <a id="HeaderFormSubmitButton" value="Logout">Logout<i class="material-icons">power_settings_new</i></a>
        </li>

        <li>
            <a>Settings<i class="material-icons">settings</i></a>
        </li>
    </ul>

    <!-- Dropdown Structure -->
    <ul id='messageDropdown' class='dropdown-content' data-constrainWidth="false">
        <li>
            <a asp-controller="MessageForm" asp-action="ConversationList">Conversations<i class="material-icons">list</i></a>
        </li>
        <li>
            <a asp-controller="MessageForm" asp-action="Create">New Message<i class="material-icons">add</i></a>
        </li>
    </ul>
    <!-- Dropdown Structure -->
    <ul id='friendshipDropdown' class='dropdown-content'>

        <li><a asp-controller="Friendships" asp-action="Index">My Friends<i class="material-icons">group</i><span class="badge">@_friendService.Count</span></a></li>
        <li class="divider" tabindex="-1"></li>

        <li><a asp-controller="Friendships" asp-action="InvitationsSent">Invites Sent<i class="material-icons">redo</i></a></li>
        <li><a asp-controller="Friendships" asp-action="InvitationsReceived">Invites Received<i class="material-icons">undo</i></a></li>
    </ul>

    <form asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })" method="post" id="HeaderForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            <li class="avatar">
                <a class="left tooltipped" data-position="bottom" data-tooltip="Profile" asp-area="Identity" asp-page="/Account/Manage/Index">
                    <img src="~/images/NoProfileImage.png" alt="" class="circle left" style="height: 40px; margin-top: 10px; margin-right: 5px;">
                    @if (SignInManager.IsSignedIn(User))
                    {@_userService.CurrentUser.FirstName}
                </a>
            </li>
            <li data-constrainWidth="false">
                <a class='dropdown-trigger tooltipped' data-position="bottom" data-tooltip="Friends" href='#' data-target='friendshipDropdown'>
                    <i class="material-icons">
                        supervisor_account
                    </i>
                </a>
            </li>
            @if (SignInManager.IsSignedIn(User))
            {
                <li data-constrainWidth="false">
                    <a class='dropdown-trigger tooltipped' data-position="bottom" data-tooltip="Messages" data-target='messageDropdown' asp-controller="MessageForm" asp-action="Index">
                        <i class="material-icons">
                            message
                        </i>
                    </a>
                </li>
            }
            <li data-constrainWidth="false">
                <a class='dropdown-trigger tooltipped' data-position="left" data-tooltip="Settings" href='#' data-target='userSettingsDropdown'>
                    <i class="material-icons">settings</i>
                </a>
            </li>
            <li>

            </li>
        </ul>
    </form>
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-area="Identity" asp-page="/Account/Register">Register</a></li>
        <li><a asp-area="Identity" asp-page="/Account/Login">Login</a></li>
    </ul>
}
